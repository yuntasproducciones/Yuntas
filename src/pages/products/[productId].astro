export async function getStaticPaths() {
  return productos.map((producto) => {
    return {
      params: { productId: producto.id.toString() },
    };
  });
}

const { productId } = Astro.params;

const producto = productos.find((p) => p.id.toString() === productId);

if (!producto) {
  throw new Error(`Producto no encontrado: ${productId}`);
}

const productoRuta = producto.nombre.replace(/\s+/g, "");
---

<Layout title={producto.nombre}>
  <section class="w-full h-dvh grid grid-rows-[90%_10%]">
    <Picture
      src={producto.imagen_banner_url}
      alt={`Imagen de ${producto.nombre}`}
      class="w-full h-full object-cover"
    />
    <h1
      class="w-full bg-white text-blue-950 place-content-center font-extrabold text-center text-3xl lg:text-5xl 2xl:text-7xl 2xl:h-[100px]"
    >
      {producto.nombre}
    </h1>
  </section>
  <section class="bg-linear-to-b from-blue-900 to-indigo-950 text-white w-full">
    <div
      class="flex flex-col items-center sm:flex-row sm:justify-around w-full py-16 px-2 sm:px-8"
    >
        <Fader nombreProducto={producto.nombre} client:load />
      <div
        class="flex flex-col justify-evenly ps-6 pe-2 sm:px-7 w-full h-full max-w-md sm:max-w-2xs lg:max-w-md xl:max-w-xl 2xl:max-w-2xl"
      >
        <h2
          class="text-sm sm:text-xl md:text-2xl lg:text-4xl 2xl:text-6xl font-extrabold text-center"
        >
          Especificaciones
        </h2>
        <ul
          class="list-disc text-xs sm:text-md md:text-base lg:text-xl xl:text-2xl 2xl:text-4xl"
        >
          {
            producto.especificaciones.map((item) => {
              return <li class="my-6">{item}</li>;
            })
          }
        </ul>
      </div>
    </div>
    <div
      class="text-blue-950 bg-white w-full py-6 text-center px-2 lg:px-12 2xl:py-14"
    >
      <h2 class="text-2xl md:text-3xl lg:text-4xl 2xl:text-6xl font-extrabold">
        Información
      </h2>
      <p
        class="whitespace-break-spaces font-semibold my-5 text-sm md:text-base lg:text-xl xl:text-2xl 2xl:text-4xl"
      >
        {producto.info}
      </p>
    </div>
    <div
      class="flex flex-col items-center sm:flex-row sm:justify-around w-full py-16 px-8"
    >
      <div
        class="flex flex-col justify-evenly ps-6 pe-2 sm:px-7 lg:px-10 2xl:px-16  w-full h-full max-w-md sm:max-w-2xs lg:max-w-md xl:max-w-xl 2xl:max-w-2xl"
