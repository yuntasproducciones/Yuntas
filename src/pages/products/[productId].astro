</Layout>
<!-- Ventana emergente -->
<div
  id="lightbox"
  class="fixed inset-0 flex items-center justify-center bg-black/50 z-50"
>
  <div
    class="flex flex-col-reverse sm:flex-row relative bg-white rounded-2xl shadow-lg max-w-[400px] sm:max-w-lg overflow-hidden mx-2 sm:mx-[0px]"
  >
    <!-- Imagen -->
    <div class="sm:w-1/2">
      <Picture
        src={producto.emergente.imagen_url}
        alt={producto.nombre}
        class="h-[250px] sm:h-full w-full object-cover"
      />
    </div>

    <!-- Formulario -->
    <div class="sm:w-1/2 bg-[#293296] p-6 text-white relative">
      <button
        id="close-modal"
        class="absolute top-2 right-2 bg-white text-black rounded-full w-8 h-8 flex items-center justify-center"
        >✕</button
      >
      {producto.emergente.tipo == 1 && <h2 class="text-xl sm:text-4xl font-semibold italic">Obtén<br><span class="text-2xl sm:text-5xl font-bold">Asesoría<br></span>gratuita</h2>}
      {producto.emergente.tipo == 2 && <h2 class="text-xl sm:text-4xl font-bold italic"><span class="text-base sm:text-3xl font-semibold">Disfruta Nuestros<br></span>Beneficios</h2>}
      {producto.emergente.tipo == 3 && <h2 class="text-xl sm:text-4xl font-semibold italic">Accede<br><span class="text-2xl sm:text-5xl font-bold">Ofertas<br></span>Exclusivas</h2>}
      {producto.emergente.tipo == 4 && <h2 class="text-base sm:text-2xl font-semibold italic">Gana <br> <span class="text-2xl sm:text-5xl font-semibold">10% dto.</span> en tu compra</h2>}
      {producto.emergente.tipo == 5 && <h2 class="text-base sm:text-2xl font-semibold italic"><span class="text-2xl sm:text-5xl font-semibold">Ahorra<br></span>en tu primera compra</h2>}
      {producto.emergente.tipo == 6 && <h2 class="text-lg sm:text-3xl font-semibold italic">Obtén<br><span class="text-xl sm:text-4xl font-bold">Descuentos<br></span>Especiales</h2>}
      {producto.emergente.tipo == 7 && <h2 class="text-xl sm:text-4xl font-semibold italic">Envío<br /><span class="text-3xl sm:text-6xl font-bold">Gratis<br /></span><span class="text-base sm:text-2xl font-semibold">en todo Lima</span></h2>}

      <form class="mt-4">
        <label class="block text-lg font-bold">Nombre</label>
        <input
          type="text"
          class="w-full px-3 py-1 rounded-full bg-white text-black mb-4"
        />

        <label class="block text-lg font-bold">Teléfono</label>
        <input
          type="text"
          class="w-full px-3 py-1 rounded-full bg-white text-black mb-4"
        />

        <label class="block text-lg font-bold">Correo</label>
        <input
          type="email"
          class="w-full px-3 py-1 rounded-full bg-white text-black mb-4"
        />

        <button class="w-full bg-[#172649] text-white-800 text-2xl border py-3 rounded-lg font-bold">
            {producto.emergente.tipo == 1 && "Aprovecha ahora"}
            {producto.emergente.tipo == 2 && "Aprovecha ahora"}
            {producto.emergente.tipo == 3 && "Regístrate"}
            {producto.emergente.tipo == 4 && "Cotiza ahora"}
            {producto.emergente.tipo == 5 && "Regístrate"}
            {producto.emergente.tipo == 6 && "Cotiza ahora"}
            {producto.emergente.tipo == 7 && "Aprovecha ahora"}
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Código que permite cerrar las ventanas emergentes  -->
<script>
  function setupModal() {
    const modal = document.getElementById("lightbox");
    const closeButton = document.getElementById("close-modal");

    if (modal && closeButton) {
      closeButton.addEventListener("click", () => {
        modal.classList.add("hidden");
      });
    }
  }

  document.addEventListener("DOMContentLoaded", setupModal);
  document.addEventListener("astro:after-swap", setupModal);
</script>