// Obtener rutas estáticas
export async function getStaticPaths() {
  return articles.map((article) => {
    return {
      params: { articleId: article.id.toString() },
    };
  });
}

// Obtener el parámetro articleId de la URL
const { articleId } = Astro.params;

// Encontrar el artículo correspondiente
const article = articles.find((a) => a.id.toString() === articleId);

if (!article) {
  throw new Error(`Artículo no encontrado: ${articleId}`);
}
---

<Layout title={article.title}>
  <section class="relative">
    <Picture
      src={article.image_banner_url}
      alt=""
      class="w-full max-h-[100vh]"
    />
    <div class="absolute inset-0 flex flex-col justify-center items-center">
      <h1 class="text-7xl text-center Montserrat font-black text-white sombra-title">
        Blog Yuntero
      </h1>
    </div>
  </section>
  <div class="w-full bg-white text-blue-950 text-3xl font-extrabold text-center h-20 content-center">
    <h2 class="text-5xl">ARTÍCULOS</h2>
  </div>
  <section class="p-24 text-white bg-linear-to-b from-blue-900 to-indigo-950 flex flex-col">
    <div class="flex flex-col items-center">
      <h3 class="text-5xl font-bold text-center mb-[30px]">{article.title}</h3>
      <p class="text-center font-bold text-4xl mb-[80px]">
        {article.subtitle}
      </p>
      <BlogFader title={article.title} client:load />
      <div class="flex flex-col items-center lg:block lg:columns-2 gap-16 max-w-[1100px]">
        {article.content.map((section) => (
          <>
            <Picture src={section.image} formats={["webp"]} alt={section.alt} class="mt-10 mb-28" />
            <p class="text-justify Montserrat text-2xl py-[40px]">
              {section.text}
            </p>
          </>
        ))}
      </div>
      <p class="text-3xl Montserrat font-semibold mt-[150px]">
        {article.callToAction.text}
      </p>
      <button class="mt-[20px] text-4xl bg-linear-to-r from-[#2FEBFF] to-[#0EADCA] rounded-[50px] w-[350px] h-[88px] font-black">
        {article.callToAction.buttonText}
      </button>
    </div>
  </section>
</Layout>
