---
import "../styles/navbar.css";
import BurgerMenu from "./BurgerMenu";
const isActive = (path: string) => Astro.url.pathname === path;
const rutas = [
  { link: "/", texto: "INICIO" },
  { link: "/products", texto: "PRODUCTOS" },
  { link: "/about", texto: "NOSOTROS" },
  { link: "/blog", texto: "BLOG" },
  { link: "/contact", texto: "CONTACTO" },
];
---

<header class="fixed w-full z-20">
  <nav
    class="relative w-full grid lg:grid-cols-7 grid-cols-3 bg-linear-to-b from-slate-900/85 from-50% items-center h-32 px-10 lg:px-0 lg:place-items-center py-2 text-white font-semibold xl:text-2xl 2xl:text-4xl"
  >
    <BurgerMenu links={rutas} client:load />
    <a href="/" class="h-16 lg:h-24 2xl:h-28">
      <img
        src="../src/assets/images/logo_yuntas.webp"
        alt="Logo de Yuntas"
        class="h-full justify-self-center"
      />
    </a>
    {
      rutas.map(({ link, texto }) => {
        return (
          <a
            href={link}
            class={`hidden lg:block relative px-6 py-2 ${isActive(link) ? "border-effect" : ""}`}
          >
            <span class="relative">{texto}</span>
          </a>
        );
      })
    }
    <button class="lg:justify-self-center justify-self-end">
      <svg
        viewBox="0 0 16 16"
        fill="none"
        class="w-10"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M8 7C9.65685 7 11 5.65685 11 4C11 2.34315 9.65685 1 8 1C6.34315 1 5 2.34315 5 4C5 5.65685 6.34315 7 8 7Z"
          fill="currentColor"></path>
        <path
          d="M14 12C14 10.3431 12.6569 9 11 9H5C3.34315 9 2 10.3431 2 12V15H14V12Z"
          fill="currentColor"></path>
      </svg></button
    >
  </nav>
</header>
